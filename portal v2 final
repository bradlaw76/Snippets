    <script>
        function checkFirstLoad() {
            // Overlay starts visible by default
        }

        function closeDisclosure() {
            document.getElementById('view-disclosure-overlay').classList.add('hidden');
        }

        function navigate(viewId) {
            const sections = document.querySelectorAll('section');
            sections.forEach(s => s.classList.add('hidden'));
            const target = document.getElementById('view-' + viewId);
            if (target) target.classList.remove('hidden');
            window.scrollTo(0, 0);
        }

        function handleIdMeEmail() { navigate('idme-password'); }

        function pickService(btn, name) {
            document.querySelectorAll('.sched-card').forEach(b => b.classList.remove('card-active'));
            btn.classList.add('card-active');
            const next = document.getElementById('btn-next-sched-1');
            next.classList.remove('bg-gray-300', 'text-gray-500', 'cursor-not-allowed');
            next.classList.add('bg-blue-700', 'text-white');
            next.disabled = false;
        }

        function goSchedStep(step) {
            document.getElementById('sched-step-1').classList.add('hidden');
            document.getElementById('sched-step-2').classList.add('hidden');
            document.getElementById('sched-step-' + step).classList.remove('hidden');
            const ind2 = document.getElementById('ind-2');
            if(step === 2) {
                ind2.classList.remove('bg-gray-200');
                ind2.classList.add('bg-blue-700', 'text-white');
            } else {
                ind2.classList.remove('bg-blue-700', 'text-white');
                ind2.classList.add('bg-gray-200');
            }
        }

        function finishScheduling() {
            const randomNum = Math.floor(10000 + Math.random() * 90000);
            document.getElementById('appt-id').innerText = `APT-${randomNum}-TX`;
            document.getElementById('sms-section').classList.remove('hidden');
            document.getElementById('sms-sent').classList.add('hidden');
            document.getElementById('modal').classList.remove('hidden');
        }

        function confirmSMS(wantSMS) {
            document.getElementById('sms-section').classList.add('hidden');
            if (wantSMS) document.getElementById('sms-sent').classList.remove('hidden');
        }

        function closeModal() {
            document.getElementById('modal').classList.add('hidden');
            navigate('dashboard');
        }
    </script>
</body>
</html>

